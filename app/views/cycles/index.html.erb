<div data-controller="modal">
  <div class="cycles-table">
    <div class="cycles-table__header">
      Choose cycle to share
    </div>
    <div class="cycles-table__content">
      <%= render @cycles %>
    </div>
  </div>
  <div id="modal" class="modal --hidden" data-modal-hidden-class="--hidden">
    <div class="modal__card">
      <div id="modelcontent" class="modal__content" data-modal-target="content"></div>
      <%= inline_svg_tag 'icon-close-2.svg', class: 'modal__close-button', data: { action: "click->modal#close" }%>
    </div>
  </div> 
</div>